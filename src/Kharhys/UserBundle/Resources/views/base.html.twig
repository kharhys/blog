{% extends 'MopaBootstrapBundle::base.html.twig' %}

{% block head_bottom %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/bmatznerfontawesome/css/font-awesome.min.css') }}" />
    <!--[if IE 7]>
    <link rel="stylesheet" href="{{ asset('bundles/bmatznerfontawesome/css/font-awesome-ie7.min.css') }}">
    <![endif]-->
    <style type="text/css">
        html, body {
            height: 100%;
        }
            /* Faded out hr */
        hr.soften {
            height: 1px;
            background-image: -webkit-linear-gradient(left, rgba(255,255,255,0), rgba(255,255,255,.8), rgba(255,255,255,0));
            background-image:    -moz-linear-gradient(left, rgba(255,255,255,0), rgba(255,255,255,.8), rgba(255,255,255,0));
            background-image:     -ms-linear-gradient(left, rgba(255,255,255,0), rgba(255,255,255,.8), rgba(255,255,255,0));
            background-image:      -o-linear-gradient(left, rgba(255,255,255,0), rgba(255,255,255,.8), rgba(255,255,255,0));
            border: 0;
        }

        hr.soften-alt {
            height: 1px;
            background-image: -webkit-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.8), rgba(0,0,0,0));
            background-image:    -moz-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.8), rgba(0,0,0,0));
            background-image:     -ms-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.8), rgba(0,0,0,0));
            background-image:      -o-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,.8), rgba(0,0,0,0));
            border: 0;
        }

        #top {
            /*
            background: #02daaf;
            color: #ff582f;
            */
            background: #38425D url(/bundles/kharhysframework/images/bg_texture.png);
            top: 0;
            left: 0;
            z-index: 20;
            width: 100%;
            border-top: 6px solid #0F1320;
            box-shadow: 0 8px 8px -6px #072d20, 25px 0 0 #fff, -5px 0 0 #fff;
            -moz-box-shadow: 0 8px 8px -6px #072d20, 25px 0 0 #fff, -5px 0 0 #fff;
            -webkit-box-shadow: 0 8px 8px -6px #072d20, 25px 0 0 #fff, -5px 0 0 #fff;
        }
        .wrapper {
            background: #C8CED3 url(/bundles/kharhysframework/images/bg_texture.png);
        }
        #content {
            background: #8793B4 url(/bundles/kharhysframework/images/bg_texture.png);
        }
        .white {
            color: #FFFFFF;
        }
        #market {
            color: #842436;
            border-top: 2px solid #842436;
        }
        .top-border {
            border-top: 2px solid  #444F58;
            padding: 10px;
        }
        .bottom-border {
            border-bottom: 2px solid  #842436;
        }
        a:hover {
            text-decoration: none;
        }
        .purple {
            background: #8793B4 url(/bundles/kharhysframework/images/bg_texture.png);
            color: #fad9ac;
        }
        .blue {
            background: #274975 url(/bundles/kharhysframework/images/bg_texture.png);
            color: #ffffff;
        }
        .naked {
            padding: 0;
            margin: 0;
        }
        .bgless {
            background: none;
            border: none;
            box-shadow: none;
        }
        .btn-maroon {
            background: #842436;
            box-shadow: none;
            border: none;
            border-radius: 0;
            color: #fad9ac;
            text-transform: uppercase;
            text-shadow: none;
        }
        .content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 1%;
        }
        #admin_content {
            background: #8793B4 url(/bundles/kharhysframework/images/bg_texture.png);
        }
        .menu {
            margin-top: 0.5%;
            border-top: 1px solid #205859;
        }
        ul {
            list-style-type: none;
        }
        .menu li {
            display: inline-block;
            padding: 0.5% 3%;
        }
        .menu li:active {
            border-top: 2px solid #444F58;
        }
        .menu a {
            color: #38425D;
            text-transform: uppercase;
            font-size: 90%;
        }
        .menu-bottom a {
            color: #ffffff;
        }
        .menu-bottom {
            border-top: none;
        }
        .holder {
            max-width: 1200px;
            margin: 0 auto;
        }
        .box {
            margin-bottom: 25px;
            border: 1px solid #CCC;
            word-wrap: break-word;
            -webkit-box-shadow: 0 0 4px 2px #f1f1f1;;
            -moz-box-shadow: 0 0 4px 2px #f1f1f1;
            -ms-box-shadow: 0 0 4px 2px #f1f1f1;
            -o-box-shadow: 0 0 4px 2px #f1f1f1;
            box-shadow: 0 0 4px 2px #f1f1f1;
        }
            /*************************************
             Login box style code
    **************************************/

        .loginBox{
            background-color: #fff;
            border: 1px solid #ddd;
            margin-top: 40px;
            margin-bottom: 10px;
        }

        .loginBox .title{
            background-color: #f7f7f7;
            padding: 15px;
            border-bottom: 1px solid #ddd;
            color: #bbbbbb;
            font-size: 20px;
            text-align: center;
        }

        .loginBox form{
            color: #666;
            padding-bottom: 10px;
            max-width: 80%;
            margin: 40px auto;
        }
        .centered {
            max-width: 20%;
            margin: 20px auto;
        }
        .basicHeader{
            background-color: #4f5d62;
            color: #f2f2f2;
        }

        .basicBody{
            background-color: #72868d;
        }
        .basicBody a {
            color: #ffffff;
        }
    </style>
{% endblock head_bottom %}

{% block navbar %}{% endblock navbar %}


{% block container %}
    <header id="top">
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span6 offset3 text-center">
                    <img src="http://fpoimg.com/500x100?text=CompanyLogo&bg_color=444F58"/>
                </div>
            </div>
        </div>
    </header>

    <div id="content">
        <div class="content wrapper">
            <div class="container-fluid">
                <div class="row-fluid">
                    {% block content %}
                    {% endblock content %}
                </div>
            </div>
        </div>
    </div>
{% endblock container %}