<div>
    <div class="title">
        <h3 class="naked">Navigation</h3>
    </div>
    <div class="contained">
        <ul>
            {% if home_link %}
                <li><a href="{{ path('blog_homepage') }}">{{ 'menu.welcome'|trans({}, 'MvBlogBundle') }}</a></li>
            {% endif %}
            {% for entity in entities %}
                <li><a href="{{ path('blog_category_list', entity.routingParams ) }}">{{ entity.title }}</a>
                    {% for children in entity.children %}
                        {% if loop.first %}<ul>{% endif %}
                        <li><a href="{{ path('blog_category_list', children.routingParams ) }}">{{ children.title }}</a></li>
                        {% if loop.last %}</ul>{% endif %}
                    {% endfor %}
                </li>
            {% endfor %}
        </ul>
    </div>
</div>